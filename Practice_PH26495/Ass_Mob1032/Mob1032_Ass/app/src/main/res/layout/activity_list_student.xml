<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity" >


    <ImageButton
        android:id="@+id/imb_Back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/dark"
        android:scaleType="centerCrop"
        android:src="@drawable/previous"
        android:backgroundTint="@color/white"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/caveat_brush"
        android:gravity="center"
        android:shadowColor="#F3A3A3"
        android:layout_marginBottom="20dp"
        android:text="Danh sách lớp"
        android:textColor="#03A9F4"
        android:textSize="35dp" />
    <ListView
        android:id="@+id/lv_class"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/custom_background_listview_user"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/caveat_brush"
        android:gravity="center"
        android:shadowColor="#F3A3A3"
        android:layout_marginBottom="10dp"
        android:text="THÔNG TIN SINH VIÊN"
        android:textColor="#03A9F4"
        android:textSize="35dp" />
    <ListView
        android:id="@+id/lv_students"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/custom_background_listview_user"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:src="@drawable/imggif2"
            android:layout_gravity="bottom"
            />

    </LinearLayout>






</LinearLayout>