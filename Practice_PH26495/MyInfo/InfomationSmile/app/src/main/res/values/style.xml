<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_title_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="style_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/aleo</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="style_img_dot">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/rec</item>
    </style>
    <style name="style_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/aleo</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>